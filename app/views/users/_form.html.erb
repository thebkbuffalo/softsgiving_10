<%= form_for User.new do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_area :name %>
  </div>
  <div class="field">
    <%= f.label :dish %><br>
    <%= f.text_area :dish %>
  </div>
  <div class="field">
    <%= f.label :number_of_guests %><br>
    <%= f.number_field :number_of_guests %>
  </div>
  <div class="field">
    <%= f.label :note %><br>
    <%= f.text_area :note %>
  </div>
  <div class="field">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
